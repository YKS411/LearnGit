                    <li><a asp-area="" asp-controller="Articles" asp-action="Index">博文管理</a></li>
                    <li><a asp-area="" asp-controller="Banners" asp-action="Index">轮播图管理</a></li>
                    <li><a asp-area="" asp-controller="Categories" asp-action="Index">分类管理</a></li>
                    <li><a asp-area="" asp-controller="Comments" asp-action="Index">评论管理</a></li>
                    <li><a asp-area="" asp-controller="Links" asp-action="Index">链接管理</a></li>
                    <li><a asp-area="" asp-controller="Recommends" asp-action="Index">推荐管理</a></li>
                    <li><a asp-area="" asp-controller="Tags" asp-action="Index">标签管理</a></li>
                    <li><a asp-area="" asp-controller="TagRelateArticles" asp-action="Index">文章标签管理</a></li>
