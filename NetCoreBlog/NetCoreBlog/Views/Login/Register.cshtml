@model Register

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 minimum-scale=1.0,maximum-scale=1.0, user-scalable=0" />

    <link rel="stylesheet" href="~/lib/Layui/css/layui.css" />
    <link rel="stylesheet" href="~/lib/Layui/css/modules/layer/default/layer.css" media="all" />
    <link rel="stylesheet" href="~/lib/Layui/css/admin.css" media="all" />
    <link rel="stylesheet" href="~/lib/Layui/css/login.css" media="all" />
</head>

<body layadmin-themealias="default" class="layui-layout-body">
    @{
        ViewData["Title"] = "注册";
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="layadmin-user-login-main" style="margin-top:200px">
            <div class="layadmin-user-login-box layadmin-user-login-header">
                <h2>NetCoreBlog</h2>
                <p>后端采用netcore前端采用layui的博客</p>
            </div>
            <form class="layadmin-user-login-box layadmin-user-login-body layui-form" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="layui-form-item">
                    @*<label asp-for="UserName" class="layadmin-user-login-icon layui-icon layui-icon-username"></label>*@
                    <input asp-for="Name" class="layui-input" placeholder="请输入用户名" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="layui-form-item">
                    @*<label asp-for="PassWord" class="layadmin-user-login-icon layui-icon layui-icon-password"></label>*@
                    <input asp-for="PassWord" type="password" class="layui-input" placeholder="请输入密码" />
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>

                <div class="layui-form-item">
                    @*<label asp-for="PassWord" class="layadmin-user-login-icon layui-icon layui-icon-password"></label>*@
                    <input asp-for="PassWord2" type="password" class="layui-input" placeholder="请再次输入密码" />
                    <span asp-validation-for="PassWord2" class="text-danger"></span>
                </div>

                <div class="layui-form-item">
                    <button class="layui-btn layui-btn-fluid" lay-submit="" lay-filter="LAY-user-login-submit">注册</button>
                </div>
            </form>
        </div>

    }


</body>
</html>