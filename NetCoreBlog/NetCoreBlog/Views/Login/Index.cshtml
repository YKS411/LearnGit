            </div>

            <div class="layui-form-item">
                @*<label asp-for="PassWord" class="layadmin-user-login-icon layui-icon layui-icon-password"></label>*@
                <input asp-for="PassWord" type="password" class="layui-input" placeholder="请输入密码" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="layui-form-item">
                <button class="layui-btn layui-btn-fluid" lay-submit="" lay-filter="LAY-user-login-submit">登 入</button>
            </div>
        </form>

        <div class="layui-trans layui-form-item layadmin-user-login-other">
            <a asp-controller="Login" asp-action="Register" class="layadmin-user-jump-change layadmin-link">注册帐号??</a>
        </div>
    </div>

       



